<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/image_loading_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/projcet_type_image"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_20"
        android:background="@drawable/point_left" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/projcet_type_image"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_14"
        >

        <TextView
            android:id="@+id/projcet_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="工程名字：gddst123"
            android:textColor="@color/point_facility3"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/projcet_num_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="工程编号：gddst123"
            android:textColor="@color/point_facility3"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/projcet_type_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="工程类型：gddst123"
            android:textColor="@color/point_facility3"
            android:textSize="@dimen/sp_13" />


        <TextView
        android:id="@+id/projcet_shareCode_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:text="共享码：gddst123"
        android:textColor="@color/point_facility3"
        android:visibility="gone"
        android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/projcet_lineLenght_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="管线长度：gddst123"
            android:textColor="@color/point_facility3"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/projcet_pointNumber_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="设施点数量：gddst123"
            android:textColor="@color/point_facility3"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/projcet_qican_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="七参数：gddst123"
            android:textColor="@color/point_facility3"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/projcet_cDate_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="创建时间：gddst123"
            android:textColor="@color/point_facility3"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/projcet_uDate_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="更新时间：gddst123"
            android:textColor="@color/point_facility3"
            android:textSize="@dimen/sp_13" />


    </LinearLayout>

    <com.movementinsome.caice.view.RatioImageView
        android:id="@+id/full_screen_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/two_code_imageButton"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_20"
        />

</RelativeLayout>