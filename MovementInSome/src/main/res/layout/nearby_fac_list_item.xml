<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dip"
        android:background="@drawable/map_layer_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp" 
        android:paddingRight="10dp">

        <Button
            android:id="@+id/nearby_fac_list_item_msg"
            android:layout_width="30dip"
            android:layout_height="25dip"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/map_mark_name_bj"
            android:background="@drawable/map_layer_background"
            android:text="详细"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/nearby_fac_list_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/map_mark_name_bj"
            android:layout_centerVertical="true"
            android:text="设施1"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/map_mark_name_bj"
            android:layout_width="30dip"
            android:layout_height="25dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/map_layer_background"
            android:text="定位"
            android:textSize="10dp" />

    </RelativeLayout>

</LinearLayout>