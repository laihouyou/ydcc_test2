<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/transparent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        >

        <LinearLayout
            android:id="@+id/croutLin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@drawable/shape_whate"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:gravity="center"
                android:text="@string/navigation_options"
                android:textSize="@dimen/sp_20"
                android:textColor="@color/cornflowerblue6"
                android:background="@drawable/shape_blue2"
                android:layout_gravity="center_horizontal"
                />

            <LinearLayout
                android:layout_marginTop="3dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            </LinearLayout>

            <TextView
                android:id="@+id/tv_driving_search"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center"
                android:text="@string/nokia_drivers"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/cornflowerblue6"
                android:layout_marginLeft="@dimen/dp_35"
                android:layout_marginRight="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginBottom="@dimen/dp_15"
                android:background="@drawable/shape_blue"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/tv_riding_search"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center"
                android:text="@string/cycling_navigation"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/cornflowerblue6"
                android:layout_marginLeft="@dimen/dp_35"
                android:layout_marginRight="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:background="@drawable/shape_blue"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/tv_foot_search"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center"
                android:text="@string/pedestrian_navigation"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/cornflowerblue6"
                android:layout_marginLeft="@dimen/dp_35"
                android:layout_marginRight="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_25"
                android:background="@drawable/shape_blue"
                android:layout_gravity="center_horizontal"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/cancelInputIm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/croutLin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_33"
            android:background="@drawable/close_btn"
            />

    </RelativeLayout>




</RelativeLayout>