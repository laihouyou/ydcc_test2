<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.movementinsome.app.pub.view.ClearableEditText
            android:id="@+id/account_chang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="@string/account"
            android:maxLength="30" />


        <com.movementinsome.app.pub.view.ClearableEditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="textEmailAddress" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10">

            <com.movementinsome.app.pub.view.ClearableEditText
                android:id="@+id/email_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email_code"
                android:inputType="number"
                android:maxLength="6" />

            <TextView
                android:id="@+id/get_email_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_20"
                android:padding="@dimen/dp_10"
                android:text="@string/get_email_code"
                android:textColor="@color/cornflowerblue6" />

        </RelativeLayout>

        <com.movementinsome.app.pub.view.ClearableEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"
            android:hint="@string/please_enter_new_password" />

        <!--<com.movementinsome.app.pub.view.ClearableEditText-->
        <!--android:id="@+id/password_again"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginBottom="@dimen/dp_10"-->
        <!--android:layout_marginLeft="@dimen/dp_30"-->
        <!--android:layout_marginRight="@dimen/dp_30"-->
        <!--android:layout_marginTop="@dimen/dp_10"-->
        <!--android:hint="@string/please_enter_new_password_again" />-->

        <Button
            android:id="@+id/change_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_btn2"
            android:text="@string/change_password"
            android:textColor="@color/white" />

    </LinearLayout>

</ScrollView>