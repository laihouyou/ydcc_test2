<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/black_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout style="@style/myPhoneLayoutTitleType" >

        <Button
            android:id="@+id/nearby_fac_list_Back"
            style="@style/myPhoneButtonBack"
            android:layout_centerVertical="true" />

        <TextView
            style="@style/myPhoneTvTitle"
            android:layout_height="match_parent"
            android:text="设施列表" />
    </RelativeLayout>

    <LinearLayout
        style="@style/myPhoneLayoutPType" >

        <LinearLayout style="@style/myPhoneLayoutBgType" >
            <ListView 
                android:id="@+id/nearby_fac_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                
            </ListView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>