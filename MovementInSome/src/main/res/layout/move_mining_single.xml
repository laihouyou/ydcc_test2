<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#f0f0f0"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_marginRight="5dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="60dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="物探点号："
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/ed_tableNum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:ems="10"
                    android:gravity="center_vertical"></EditText>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linGone_point"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textViewgone"
                    android:layout_width="80dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvGone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="14dp"
                    android:layout_toRightOf="@+id/textView1"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:text="表号重复，请重新输入！"
                    android:textColor="@color/red"></TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_marginRight="5dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="60dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="设备名："
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edImplementorName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@drawable/pull_down_small"
                    android:ems="10"
                    android:gravity="center_vertical"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_marginRight="5dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="60dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="经度："
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/ed_coordinatesX"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:inputType="numberDecimal"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_marginRight="5dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="60dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="纬度："
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/ed_coordinatesY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:inputType="numberDecimal"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_marginRight="5dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="60dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="地面高程："
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edGroundElevation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:inputType="numberDecimal"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_marginRight="5dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="60dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="埋深："
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edBurialDepth"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:inputType="numberDecimal"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_marginRight="5dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="60dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="口径："
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/ed_caliber_point"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@drawable/pull_down_small"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:inputType="numberDecimal"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_marginRight="5dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="60dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="类型："
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edType"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@drawable/pull_down_small"
                    android:ems="10"
                    android:gravity="center_vertical"></EditText>
            </LinearLayout>

            <!--<LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dip" >

            <TextView
                android:id="@+id/textView10"
                android:layout_width="60dip"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="安装时间："
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/edInstallationTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:ems="10" >
            </EditText>
        </LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_marginRight="5dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="60dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="地址："
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/ed_adderss_point"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:gravity="center_vertical"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_marginRight="5dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="60dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="行政区："
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edPointAdministrativeRegionPoint"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:gravity="center_vertical"></EditText>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_below"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:labelFor="@id/move_list_heard">

                <TextView
                    android:id="@+id/image_tx"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="现场照片"
                    android:textColor="@color/black" />


                <ImageView
                    android:id="@+id/imageView_add"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/image_tx"
                    android:layout_toRightOf="@+id/image_tx"
                    android:src="@drawable/add" />
            </RelativeLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyView_point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>