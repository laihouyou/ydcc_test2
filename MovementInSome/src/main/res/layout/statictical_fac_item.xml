<?xml version="1.0" encoding="utf-8"?>
<!--工程统计详情子布局-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/point_facility7"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        >

        <LinearLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/stl_fac_time"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:background="#6bbbff"
                android:gravity="center"
                android:text="15:19"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_50"
                android:layout_gravity="center_horizontal"
                android:background="@color/point_facility9"
                android:layout_marginTop="@dimen/dp_8"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_toRightOf="@+id/relativeLayout"
            >
            <TextView
                android:id="@+id/stl_fac_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:text="设备:阀门"
                android:textSize="@dimen/sp_12"
                android:textColor="#333237" />

            <TextView
                android:id="@+id/fac_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginStart="15dp"
                android:text="设备编号:00000"
                android:textSize="@dimen/sp_12"
                android:textColor="#333237" />

            <TextView
                android:id="@+id/stl_fac_movetype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginStart="15dp"
                android:text="采集方式:精准点"
                android:textSize="@dimen/sp_12"
                android:textColor="#333237" />

            <TextView
                android:id="@+id/pip_line_lenght"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="@dimen/dp_10"
                android:text="管线长度：23655.3米"
                android:textSize="@dimen/sp_12"
                android:textColor="#333237" />
            <TextView
                android:id="@+id/stl_fac_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="@dimen/dp_10"
                android:text="地点:广州大道南933号"
                android:textSize="@dimen/sp_12"
                android:textColor="#333237" />
        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>