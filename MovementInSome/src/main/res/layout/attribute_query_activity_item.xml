<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
            android:id="@+id/live_data_user_list1_ll"
            android:layout_width="match_parent"
            android:layout_height="55dip"
            android:background="#FFFFFF"
            android:orientation="horizontal" >

                <Button
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dip"
                    android:background="@drawable/magnifying" />

                <TextView
                    android:id="@+id/search_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/search_dise"
                    android:layout_marginRight="3dip"
                    android:layout_marginTop="1dip"
                    android:layout_marginBottom="1dip" />

                <Button
                    android:id="@+id/search_button_quxiao"
               		android:visibility="visible"
                    android:layout_width="14dip"
                    android:layout_height="14dip"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="15dip"
                    android:background="@drawable/search_black" />
            

            <Button
                android:id="@+id/search_button"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:background="@drawable/btn_style_one_normal"
                android:layout_gravity="center_vertical"
                android:textColor="#ffffff"
                android:text="搜索" 
                android:layout_marginLeft="5dip"
                android:layout_marginRight="10dip"/>
        </LinearLayout>

</LinearLayout>