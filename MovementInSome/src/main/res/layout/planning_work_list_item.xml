<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >
     <LinearLayout 
         android:id="@+id/planning_work_item"
         android:layout_width="match_parent"
         android:layout_height="90dip"
         android:gravity="center_vertical"
         android:layout_marginLeft="8dip"
         android:layout_marginRight="8dip"
         android:background="@drawable/whine_di">
           <LinearLayout  
            android:layout_width="match_parent"
    		android:layout_height="wrap_content"
  			android:orientation="vertical">
  			
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal" >

                   <TextView
                       android:id="@+id/shuxian"
                       android:layout_width="3dip"
                       android:layout_centerVertical="true"
                       android:layout_height="15dip"
                       android:background="@drawable/blue_xian" />

                   <TextView
                       android:layout_width="15dip"
                       android:layout_height="15dip"
                       android:layout_centerVertical="true"
                       android:layout_marginLeft="15dip"
                       android:layout_toRightOf="@+id/shuxian"
                       android:background="@drawable/clock" />

                   <TextView
                       android:id="@+id/work_message"
                       style="@style/myPhoneTvType"
                       android:layout_width="250dip"
                       android:layout_height="20dip"
                       android:layout_alignParentTop="true"
                       android:layout_marginLeft="35dip"
                       android:layout_toRightOf="@+id/shuxian"
                       android:gravity="center_vertical"
                       android:textColor="#232323"
                       android:text="温情提示：xxxxxxxxxxx" />

               </RelativeLayout>
  				
              <RelativeLayout  
                android:layout_width="match_parent"
    			android:layout_height="wrap_content">
  				 <TextView
                        android:id="@+id/work_type_title"
                    	style="@style/myPhoneTvType"
                    	android:layout_width="match_parent"
                    	android:layout_marginLeft="38dip"
						android:textColor="#5a5a5a"
                    	android:layout_toLeftOf="@+id/work_ation_bnt_ll"
                    	android:layout_marginRight="3dip"
                    	android:text="XXX路段1：" />

  				 <LinearLayout
  				     android:id="@+id/work_ation_bnt_ll"
  				     android:layout_width="wrap_content"
  				     android:layout_height="wrap_content"
  				     android:layout_alignParentRight="true"
  				     android:layout_centerVertical="true"
  				     android:layout_marginRight="16dp"
  				     android:orientation="horizontal" >

  				     <Button
  				         android:id="@+id/work_ation_msg"
  				         style="@style/myPhoneButtonSmall"
  				         android:layout_width="45dip"
  				         android:layout_height="25dip"
  				         android:visibility="gone"
  				         android:text="详细" />

  				     <Button
  				         android:id="@+id/work_ation_loc"
			             android:layout_width="60dip"
			             android:layout_height="55dip"
                		 android:textColor="#2e72b0"
  				         android:visibility="gone"
  				         android:background="@drawable/round_blue"
  				         android:text="定位" />

  				     <Button
  				         android:id="@+id/work_ation_td"
			             android:layout_width="60dip"
			             android:layout_height="55dip"
                		 android:textColor="#2e72b0"
  				         android:visibility="gone"
  				         android:background="@drawable/round_blue"
  				         android:text="填单" />
  				     
  				     <Button
  				         android:id="@+id/work_ation_fantask"
			             android:layout_width="20dip"
			             android:layout_height="20dip"
                		 android:textColor="#2e72b0"
  				         android:visibility="gone"
  				         android:background="@drawable/map_item_reture" />
  				     <Button
  				         android:id="@+id/work_ation_wc"
  				         style="@style/myPhoneButtonSmall"
  				         android:layout_width="45dip"
  				         android:layout_height="25dip"
  				         android:visibility="gone"
  				         android:text="完成" />
  				     <Button
  				         android:id="@+id/work_ation_wg"
  				         style="@style/myPhoneButtonSmall"
  				         android:layout_width="45dip"
  				         android:layout_height="25dip"
  				         android:visibility="gone"
  				         android:text="完工" />
  				      <Button
  				         android:id="@+id/work_ation_zt"
  				         style="@style/myPhoneButtonSmall"
  				         android:layout_width="45dip"
  				         android:layout_height="25dip"
  				         android:visibility="gone"
  				         android:text="暂停" />
  				 </LinearLayout>

  				</RelativeLayout>      
		</LinearLayout>
     </LinearLayout>

</LinearLayout>