        android:layout_height="45dip"
        android:background="@drawable/wx_green_bg"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tclTv_WBGL_JHX"
            android:layout_width="70dip"
            android:layout_height="45dip"
            android:textColor="#3f63ce"
            android:layout_weight="1.0"
            android:background="@drawable/tv_green_bg"
            android:gravity="center"
            android:text="计划性"
            android:textSize="16dip" />

        <TextView
            android:id="@+id/tclTv_WBGL_XCWB"
            android:layout_width="90dip"
            android:layout_height="45dip"
            android:textColor="#737373"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="应急"
            android:textSize="16dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tclLL_WXGL"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@drawable/wx_green_bg"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tclTv_WXGL_JHXWX"
            android:layout_width="110dip"
            android:layout_height="45dip"
            android:textColor="#3f63ce"
            android:layout_weight="1.0"
            android:background="@drawable/tv_green_bg"
            android:gravity="center"
            android:text="计划性维修"
            android:textSize="16dip" />

        <TextView
            android:id="@+id/tclTv_WXGL_XCQX"
            android:layout_width="90dip"
            android:layout_height="45dip"
            android:textColor="#737373"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="现场抢修"
            android:textSize="16dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tclLL_HMGL"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@drawable/wx_green_bg"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tclTv_HMGL_JHXWX"
            android:layout_width="110dip"
            android:layout_height="45dip"
            android:textColor="#3f63ce"
            android:layout_weight="1.0"
