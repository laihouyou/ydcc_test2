<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:background="@drawable/frame_white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/scada_live_data_user_yssj_item_order"
            android:layout_width="70dip"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="序号 "
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#6490ED" >
        </LinearLayout>

        <TextView
            android:id="@+id/scada_live_data_user_yssj_item_time"
            android:layout_width="70dip"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="时间"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#6490ED" >
        </LinearLayout>

        <TextView
            android:id="@+id/scada_live_data_user_yssj_item_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="（北磨）莆田市第二水厂"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>