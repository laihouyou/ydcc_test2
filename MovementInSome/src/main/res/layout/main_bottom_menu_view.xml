<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/main_img"
            android:layout_width="@dimen/head_size"
            android:layout_height="@dimen/head_size"
            android:background="@drawable/main_task_icon0"
            android:padding="2.0dip"
            android:scaleType="fitXY" />
        <TextView
            android:id="@+id/main_bottom_menu_img"
            android:layout_width="18dip"
            android:layout_height="14dip"
            android:layout_alignLeft="@+id/main_img"
            android:layout_marginLeft="15dip"
            android:background="@drawable/menu_num"
            android:gravity="center"
            android:text="10"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/main_bottom_menu_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的工作"
        android:textSize="10dip" />

</LinearLayout>