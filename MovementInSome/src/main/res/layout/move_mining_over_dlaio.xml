<?xml version="1.0" encoding="utf-8"?>
<!--提示对话框-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:orientation="vertical"
	android:background="@color/transparent"
    android:layout_height="match_parent" >

	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		>

		<LinearLayout
			android:id="@+id/zantingLin"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_marginLeft="@dimen/dp_30"
			android:layout_marginRight="@dimen/dp_30"
			android:background="@drawable/shape_whate"
			>

			<TextView
				android:id="@+id/dlaioTitle"
				android:layout_width="match_parent"
				android:layout_height="@dimen/dp_50"
				android:gravity="center"
				android:text="暂停提醒"
				android:textSize="@dimen/sp_20"
				android:textColor="@color/cornflowerblue6"
				android:background="@drawable/shape_blue2"
				android:layout_gravity="center_horizontal"
				/>

			<TextView
				android:id="@+id/dlaioMsg"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:text="确认暂停项目？"
				android:textColor="@color/feed_hint_norma2"
				android:textSize="@dimen/sp_19"
				android:layout_marginBottom="@dimen/dp_25"
				android:layout_marginTop="@dimen/dp_25"
				/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginTop="@dimen/dp_15"
				android:layout_marginLeft="@dimen/dp_35"
				android:layout_marginRight="@dimen/dp_35"
				android:layout_marginBottom="@dimen/dp_25"
				>

				<TextView
					android:id="@+id/cancelOverBtn"
					android:layout_width="wrap_content"
					android:layout_weight="1"
					android:layout_height="@dimen/dp_40"
					android:gravity="center"
					android:text="取消"
					android:textSize="@dimen/sp_18"
					android:textColor="@color/point_facility3"
					android:background="@drawable/shape_blak2"
					android:layout_gravity="center_horizontal"
					/>

				<TextView
					android:layout_width="@dimen/dp_36"
					android:layout_height="wrap_content" />

				<TextView
					android:id="@+id/confirmOverBtn"
					android:layout_width="wrap_content"
					android:layout_height="@dimen/dp_40"
					android:layout_gravity="center_horizontal"
					android:layout_weight="1"
					android:background="@drawable/shape_blue3"
					android:gravity="center"
					android:text="确定"
					android:textColor="@color/cornflowerblue6"
					android:textSize="@dimen/sp_18" />

			</LinearLayout>


		</LinearLayout>

		<ImageView
			android:id="@+id/cancelOverIm"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_below="@+id/zantingLin"
			android:layout_marginTop="@dimen/dp_33"
			android:background="@drawable/close_btn"
			/>

	</RelativeLayout>



</RelativeLayout>