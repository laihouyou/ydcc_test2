<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/map_layer_background"
        android:gravity="center_vertical"
        android:paddingBottom="5dip"
        android:paddingTop="5dip" >

        <TextView
            android:id="@+id/nearby_fac_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/task_fg"
            android:gravity="center"
            android:paddingLeft="5dip"
            android:textColor="#333333"
            android:textSize="14dip" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dip" >

            <TextView
                android:id="@+id/nearby_fac_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#333333"
                android:text="编号：242534632451" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/nearby_fac_loc"
                    android:layout_width="70dip"
                    android:layout_height="20dip"
                    android:drawableRight="@drawable/task_fg"
                    android:gravity="center"
                    android:textColor="#333333"
                    android:text="定位" />
                <TextView
                    android:id="@+id/nearby_fac_details"
                    android:layout_width="70dip"
                    android:layout_height="20dip"
                    android:drawableRight="@drawable/task_fg"
                    android:gravity="center"
                    android:textColor="#333333"
                    android:text="详细" />
                <TextView
                    android:id="@+id/nearby_fac_arrive"
                    android:layout_width="70dip"
                    android:layout_height="20dip"
                    android:drawableRight="@drawable/task_fg"
                    android:gravity="center"
                    android:textColor="#333333"
                    android:text="到这里" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>