<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/black_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/myPhoneLayoutTitleType"
        android:layout_alignParentTop="true"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/show_msg_back"
            android:layout_width="28dip"
            android:layout_height="20dip"
            android:layout_centerVertical="true"
            android:src="@drawable/back_icon" />

        <TextView
            android:id="@+id/show_task_titletext"
            style="@style/myPhoneTvTitle"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="详细信息" />
    </RelativeLayout>

    <RelativeLayout
        style="@style/myPhoneLayoutBgTypeFG"
        android:layout_above="@+id/show_task_t"
        android:layout_below="@+id/show_task_title"
        android:orientation="vertical"
        android:visibility="visible"
        android:gravity="center_horizontal" >

        <ScrollView
            android:id="@+id/show_msg_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/check_photo2"
            android:layout_alignParentTop="true"
            android:paddingBottom="15dip" >
        </ScrollView>

        <LinearLayout 
            android:id="@+id/check_photo2"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/check_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/check_photo"
            android:visibility="visible" />
        
        <LinearLayout android:layout_width="1dip"
            android:layout_height="50dip"
            android:background="#FFFFFF"/>
        
        <Button
            android:id="@+id/check_luyin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/check_luyin"
            android:visibility="visible" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>