<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="#e7e7e7"
    android:orientation="vertical" >

    <LinearLayout 
        android:id="@+id/linyout"
        android:layout_height="30dp"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
    <TextView 
        android:id="@+id/tv_nq"
        android:layout_weight="1"
        android:layout_width="0dip"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/uniline"
        android:text="分公司:南区"
        />
    <RelativeLayout 
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        ></RelativeLayout>
    <TextView 
        android:id="@+id/tv_dq"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/uniline"
        android:padding="5dp"
        android:text="分公司:东区"
        />
    <RelativeLayout 
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        ></RelativeLayout>
    <TextView 
        android:id="@+id/tv_xq"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
         android:background="@drawable/uniline"
        android:padding="5dp"
        android:layout_alignParentRight="true"
        android:text="分公司:西区"
        />
    </LinearLayout>
    
    <LinearLayout 
	     android:id="@+id/linearLayout_tv"
        android:layout_height="30dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/linyout"
        android:layout_marginTop="10dp"
	    >
     <TextView
         android:id="@+id/tv_bq"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:background="@drawable/uniline"
         android:layout_weight="1"
         android:padding="5dp"
         android:gravity="center"
         android:text="分公司:北区" />
      <RelativeLayout 
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        ></RelativeLayout>
       <RelativeLayout 
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        ></RelativeLayout>
       <RelativeLayout 
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        ></RelativeLayout>
        <RelativeLayout 
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        ></RelativeLayout>
     
     </LinearLayout>

    <TextView
        android:id="@+id/tv_guangzhou"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout_tv"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/uniline"
        android:gravity="center"
        android:text="广州市xx分公司" />

    <TextView
        android:id="@+id/tv_shanghai"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_guangzhou"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/uniline"
        android:gravity="center"
        android:text="上海市xx分公司" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/tv_shanghai"/>

</RelativeLayout>