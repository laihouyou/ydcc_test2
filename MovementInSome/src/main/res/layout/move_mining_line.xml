<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="80dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="管线编号："
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/ed_lineNum"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="14dp"
                    android:layout_toRightOf="@+id/textView1"
                    android:ems="10"
                    android:gravity="center_vertical"></EditText>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linGone"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textViewgone"
                    android:layout_width="80dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvGone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="14dp"
                    android:layout_toRightOf="@+id/textView1"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:text="表号重复，请重新输入！"
                    android:textColor="@color/red"></TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="80dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="口径："
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/ed_caliber"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="14dp"
                    android:layout_toRightOf="@+id/textView3"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:inputType="numberDecimal"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="80dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="所在道路："
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/ed_adderss"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="14dp"
                    android:layout_toRightOf="@+id/textView2"
                    android:ems="10"
                    android:gravity="center_vertical"></EditText>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="80dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="管材："
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edTubeStock"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="14dp"
                    android:layout_toRightOf="@+id/textView4"
                    android:ems="10"
                    android:gravity="center_vertical"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="80dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="管线类型："
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edLineType"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="14dp"
                    android:layout_toRightOf="@+id/textView5"
                    android:ems="10"
                    android:gravity="center_vertical"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="80dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="敷设类型："
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edLayingType"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="14dp"
                    android:layout_toRightOf="@+id/textView5"
                    android:ems="10"
                    android:gravity="center_vertical"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="80dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="行政区："
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edAdministrativeRegion"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="14dp"
                    android:layout_toRightOf="@+id/textView5"
                    android:ems="10"
                    android:gravity="center_vertical"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dip">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="80dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="坐标集合："
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edPointList"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="14dp"
                    android:layout_toRightOf="@+id/textView5"
                    android:ems="10"
                    android:gravity="center_vertical"></EditText>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_below"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <TextView
                    android:id="@+id/image_tx"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="现场照片:"
                    android:textColor="@color/black" />

                <!--<ImageView-->
                    <!--android:id="@+id/imageView_one"-->
                    <!--android:layout_width="50dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_marginLeft="10dp"-->
                    <!--android:layout_toRightOf="@+id/imageView_add" />-->

                <!--<ImageView-->
                    <!--android:id="@+id/imageView_two"-->
                    <!--android:layout_width="50dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_marginLeft="10dp"-->
                    <!--android:layout_toRightOf="@+id/imageView_one" />-->

                <!--<ImageView-->
                    <!--android:id="@+id/imageView_three"-->
                    <!--android:layout_width="50dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_marginLeft="10dp"-->
                    <!--android:layout_toRightOf="@+id/imageView_two" />-->


                <ImageView
                    android:id="@+id/imageView_add"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/image_tx"
                    android:layout_toRightOf="@+id/image_tx"
                    android:src="@drawable/add" />
            </RelativeLayout>

