<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/black_background"
    android:layout_width="250dip"
    android:layout_height="400dip"
    android:orientation="vertical" >
    <LinearLayout style="@style/myPhoneLayoutTitleType" >

        <Button
            android:id="@+id/map_shot_Back"
           style="@style/myPhoneButtonBack" />

        <TextView
            android:id="@+id/xxQtv_Table_Title"
            style="@style/myPhoneTvTitle"
            android:text="地图截图" />

        <Button
            android:id="@+id/map_shot_save"
             style="@style/myPhoneButtonSmall" 
            android:text="保存" />
    </LinearLayout>
    <LinearLayout style="@style/myPhoneLayoutBgType" >
        
	    <ImageView 
	        android:id="@+id/map_shot_show"
	        android:layout_width="match_parent"
	    	android:layout_height="match_parent"/>
	</LinearLayout>
</LinearLayout>