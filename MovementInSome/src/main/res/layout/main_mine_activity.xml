<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#f5f3f3">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#398fdc" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="match_parent"
   		android:layout_height="80dip"
   		android:orientation="horizontal"
   		android:gravity="center_vertical"
   		android:background="#ffffff">
        <ImageView 
            android:layout_width="56dip"
   			android:layout_height="56dip"
   			android:layout_marginLeft="15dip"
   			android:background="@drawable/main_mine_head"/>
        <TextView 
             android:id="@+id/mine_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="admin"
             android:layout_marginLeft="15dip"
             android:textColor="#666666"
             android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/mine_tb_rd"
        android:layout_width="match_parent"
   		android:layout_height="45dip"
   		android:orientation="horizontal"
   		android:gravity="center_vertical"
   		android:layout_marginTop="10dip"
   		android:background="@drawable/bg_gv" >
        <ImageView 
            android:layout_width="20dip"
   			android:layout_height="20dip"
   			android:background="@drawable/main_mine_tb_rd"
   			android:layout_marginLeft="15dip"/>
        <TextView 
            android:layout_width="200dip"
             android:layout_height="wrap_content"
             android:layout_weight="1.0"
             android:text="表单记录"
             android:layout_marginLeft="15dip"
             android:textColor="#666666"
             android:textSize="14sp"/>
        <ImageView 
            android:layout_width="16dip"
   			android:layout_height="16dip"
   			android:background="@drawable/main_mine_arrows"
   			android:layout_marginRight="15dip"/>
    </LinearLayout>
     <LinearLayout
        android:id="@+id/mine_msg_rd"
        android:layout_width="match_parent"
   		android:layout_height="45dip"
   		android:orientation="horizontal"
   		android:gravity="center_vertical"
   		android:background="@drawable/bg_gv" >
        <ImageView 
            android:layout_width="20dip"
   			android:layout_height="20dip"
   			android:background="@drawable/main_mine_msg_rd"
   			android:layout_marginLeft="15dip"/>
        <TextView 
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:text="消息记录"
            android:layout_weight="1.0"
            android:layout_marginLeft="15dip"
            android:textColor="#666666"
            android:textSize="14sp"/>
        <ImageView 
            android:layout_width="16dip"
   			android:layout_height="16dip"
   			android:background="@drawable/main_mine_arrows"
   			android:layout_marginRight="15dip"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/mine_submit_rd"
        android:layout_width="match_parent"
   		android:layout_height="45dip"
   		android:orientation="horizontal"
   		android:gravity="center_vertical"
   		android:background="@drawable/bg_gv" >
        <ImageView 
            android:layout_width="20dip"
   			android:layout_height="20dip"
   			android:background="@drawable/main_mine_submit_rd"
   			android:layout_marginLeft="15dip"/>
        <TextView 
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:text="历史上报查询"
            android:layout_weight="1.0"
            android:layout_marginLeft="15dip"
            android:textColor="#666666"
            android:textSize="14sp"/>
        <ImageView 
            android:layout_width="16dip"
   			android:layout_height="16dip"
   			android:background="@drawable/main_mine_arrows"
   			android:layout_marginRight="15dip"/>
    </LinearLayout>
     <LinearLayout
        android:id="@+id/mine_sat"
        android:layout_width="match_parent"
   		android:layout_height="45dip"
   		android:orientation="horizontal"
   		android:gravity="center_vertical"
   		android:layout_marginTop="10dip"
   		android:background="@drawable/bg_gv" >
        <ImageView 
            android:layout_width="20dip"
   			android:layout_height="20dip"
   			android:background="@drawable/main_mine_sat"
   			android:layout_marginLeft="15dip"/>
        <TextView 
            android:layout_width="200dip"
             android:layout_height="wrap_content"
             android:layout_weight="1.0"
             android:text="卫星信号"
             android:layout_marginLeft="15dip"
             android:textColor="#666666"
             android:textSize="14sp"/>
        <ImageView 
            android:layout_width="16dip"
   			android:layout_height="16dip"
   			android:background="@drawable/main_mine_arrows"
   			android:layout_marginRight="15dip"/>
    </LinearLayout>
     <LinearLayout
        android:id="@+id/mine_pwd"
        android:layout_width="match_parent"
   		android:layout_height="45dip"
   		android:orientation="horizontal"
   		android:gravity="center_vertical"
   		android:layout_marginTop="10dip"
   		android:background="@drawable/bg_gv" >
        <ImageView 
            android:layout_width="20dip"
   			android:layout_height="20dip"
   			android:background="@drawable/main_mine_pwd"
   			android:layout_marginLeft="15dip"/>
        <TextView 
            android:layout_width="200dip"
             android:layout_height="wrap_content"
             android:layout_weight="1.0"
             android:text="更改密码"
             android:layout_marginLeft="15dip"
             android:textColor="#666666"
             android:textSize="14sp"/>
        <ImageView 
            android:layout_width="16dip"
   			android:layout_height="16dip"
   			android:background="@drawable/main_mine_arrows"
   			android:layout_marginRight="15dip"/>
    </LinearLayout>
     <LinearLayout
         android:id="@+id/mine_rmaps"
        android:layout_width="match_parent"
   		android:layout_height="45dip"
   		android:orientation="horizontal"
   		android:gravity="center_vertical"
   		android:background="@drawable/bg_gv" >
        <ImageView 
            android:layout_width="20dip"
   			android:layout_height="20dip"
   			android:background="@drawable/main_mine_rmaps"
   			android:layout_marginLeft="15dip"/>
        <TextView 
            android:layout_width="200dip"
             android:layout_height="wrap_content"
             android:layout_weight="1.0"
             android:text="离线地图下载"
             android:layout_marginLeft="15dip"
             android:textColor="#666666"
             android:textSize="14sp"/>
        <ImageView 
            android:layout_width="16dip"
   			android:layout_height="16dip"
   			android:background="@drawable/main_mine_arrows"
   			android:layout_marginRight="15dip"/>
    </LinearLayout>

</LinearLayout>
