<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/app_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_weight="1.2"
                android:gravity="right|center_vertical"
                android:text="@string/app_gps_longitude"
                style="@style/AppText" />

            <TextView
                android:id="@+id/tv_longitude"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/app_margin"
                android:layout_weight="2"
                android:gravity="center"
                style="@style/AppTextValue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/app_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_weight="1.2"
                android:gravity="right|center_vertical"
                android:text="@string/app_gps_latitude"
                style="@style/AppText" />

            <TextView
                android:id="@+id/tv_latitude"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/app_margin"
                android:layout_weight="2"
                android:gravity="center"
                style="@style/AppTextValue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/app_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_weight="1.2"
                android:gravity="right|center_vertical"
                android:text="@string/app_gps_altitude"
                style="@style/AppText" />

            <TextView
                android:id="@+id/tv_altitude"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/app_margin"
                android:layout_weight="2"
                android:gravity="center"
                style="@style/AppTextValue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/app_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_weight="1.2"
                android:gravity="right|center_vertical"
                android:text="@string/app_gps_used_satellites"
                style="@style/AppText" />

            <TextView
                android:id="@+id/tv_used_satellites"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/app_margin"
                android:layout_weight="2"
                android:gravity="center"
                style="@style/AppTextValue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/app_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_weight="1.2"
                android:gravity="right|center_vertical"
                android:text="@string/app_gps_quality"
                style="@style/AppText" />

            <TextView
                android:id="@+id/tv_gps_quality"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/app_margin"
                android:layout_weight="2"
                android:gravity="center"
                style="@style/AppTextValue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/app_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_weight="1.2"
                android:gravity="right|center_vertical"
                android:text="@string/app_gps_hdop"
                style="@style/AppText" />

            <TextView
                android:id="@+id/tv_hdop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/app_margin"
                android:layout_weight="2"
                android:gravity="center"
                style="@style/AppTextValue" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_station_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/app_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_weight="1.2"
                android:gravity="right|center_vertical"
                android:text="@string/app_gps_diff_station_id"
                style="@style/AppText" />

            <TextView
                android:id="@+id/tv_station_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/app_margin"
                android:layout_weight="2"
                android:gravity="center"
                style="@style/AppTextValue" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_diff_age"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/app_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_weight="1.2"
                android:gravity="right|center_vertical"
                android:text="@string/app_gps_diff_age"
                style="@style/AppText" />

            <TextView
                android:id="@+id/tv_diff_age"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/app_margin"
                android:layout_weight="2"
                android:gravity="center"
                style="@style/AppTextValue" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/app_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_weight="1.2"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:text="@string/app_gps_rms_x"
                style="@style/AppText" />

            <TextView
                android:id="@+id/tv_rms_x"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/app_margin"
                android:layout_weight="2"
                android:gravity="center"
                style="@style/AppTextValue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/app_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_weight="1.2"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:text="@string/app_gps_rms_y"
                style="@style/AppText" />

            <TextView
                android:id="@+id/tv_rms_y"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/app_margin"
                android:layout_weight="2"
                android:gravity="center"
                style="@style/AppTextValue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/app_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_weight="1.2"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:text="@string/app_gps_rms_h"
                style="@style/AppText" />

            <TextView
                android:id="@+id/tv_rms_h"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/app_margin"
                android:layout_weight="2"
                android:gravity="center"
                style="@style/AppTextValue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/app_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_weight="1.2"
                android:gravity="right|center_vertical"
                android:text="@string/app_gps_time"
                style="@style/AppText" />

            <TextView
                android:id="@+id/tv_utc_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/app_margin"
                android:layout_weight="2"
                android:gravity="center"
                style="@style/AppTextValue" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
