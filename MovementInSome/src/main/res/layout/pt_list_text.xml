<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/ptlist_Linear"
        android:layout_width="fill_parent"
        android:layout_height="80dip"
        android:background="#ffffff"
        android:gravity="center_vertical" >

        <LinearLayout
            android:layout_width="60dip"
            android:layout_height="match_parent"
            android:background="@drawable/frame_white2"
            android:gravity="center" >

            <CheckBox
                android:id="@+id/ptCbBroken"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:button="@drawable/check_btn"
                android:scaleX="0.6"
                android:scaleY="0.6"
                android:textSize="10dip"
                android:visibility="visible" />
        </LinearLayout>

        <TextView
            android:id="@+id/ptlist_Number"
            android:layout_width="60dip"
            android:layout_height="match_parent"
            android:background="@drawable/frame_white2"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="14dip" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/frame_white2"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ptlist_Content"
                style="@style/myPhoneTvType"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dip" />

            <TextView
                android:id="@+id/ptlistClose"
                style="@style/myPhoneTvType"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dip"
                android:text=""
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>