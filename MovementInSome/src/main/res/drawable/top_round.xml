<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#ffbbfeff" android:endColor="#ffbbfeff" android:angle="90.0" />
            <stroke android:width="1.0dip" android:color="@android:color/darker_gray" />
            <corners android:topLeftRadius="6.0dip" android:topRightRadius="6.0dip" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <gradient android:startColor="@android:color/white" android:endColor="@android:color/white" android:angle="90.0" />
            <stroke android:width="1.0dip" android:color="@android:color/darker_gray" />
            <corners android:topLeftRadius="6.0dip" android:topRightRadius="6.0dip" />
        </shape>
    </item>
</selector>